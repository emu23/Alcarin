{% extends "admin-layout" %}

{% block content %}
    <div class = "row">
        <div class = "span3 by-docs-sidebar">
            <ul class="nav nav-list bs-docs-sidenav affix">
                {% for key, module in modules %}
               		 <li>
                		<a href="modules#{{key}}">

                            {{key}}
                        </a>
            		</li>
                {% endfor %}
            </ul>
        </div>


        <div class = "span9">
        	{% for key, module in modules %}
        		<h4><a href="modules/{{key}}">{{key}}</a></h4>
        		Description: {{module['description']}}
        	{% endfor %}
        </div>
    </div>
{% endblock %}